{{>header}}
<link rel="stylesheet" href="/admin/css/summernote-bs4.min.css">
<title>Settings</title>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary card-outline mt-3" style="border-left: 2px solid black;">
                    <div class="card-header" style="background-color: #322d90; color:white;">
                        <h3><b>Settings</b></h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="alert-success">{{success}}</div>
                <div class="alert-danger">{{error}}</div>
                <form method="post" action="/admin/addsettings/{{id}}">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-form-label">
                                            <h5><b>Bidding Terms & Conditions</b></h5>
                                        </label>
                                        <textarea name="biddingTermsAndConditions" id="summernote1"
                                            class="form-control">{{{biddingTermsAndConditions}}}</textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-form-label">
                                            <h5><b>Privacy Policy</b></h5>
                                        </label>
                                        <textarea name="privacyPolicy" id="summernote2"
                                            class="form-control">{{{privacyPolicy}}}</textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-form-label">
                                            <h5><b>Disclaimer</b></h5>
                                        </label>
                                        <textarea name="disclaimer" id="summernote3"
                                            class="form-control">{{{disclaimer}}}</textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-form-label">
                                            <h5><b>Referral Commission</b></h5>
                                        </label>
                                        <textarea name="referralCommision" id="summernote4"
                                            class="form-control">{{{referralCommision}}}</textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-form-label">
                                            <h5><b>Scuti Arts T&C</b></h5>
                                        </label>
                                        <textarea name="scutiArtsTermsAndConditions" id="summernote5"
                                            class="form-control">{{{scutiArtsTermsAndConditions}}}</textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-form-label">
                                            <h5><b>Scratch card Policy</b></h5>
                                        </label>
                                        <textarea name="scratchCardPolicy" id="summernote6"
                                            class="form-control">{{{scratchCardPolicy}}}</textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="col-form-label">
                                            <h5><b>Return & Refund Policy</b></h5>
                                        </label>
                                        <textarea name="returnAndRefundPolicy" id="summernote7"
                                            class="form-control">{{{returnAndRefundPolicy}}}</textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-form-label">Call Support Number</label>
                                        <input type="number" class="form-control" name="call_support_number"
                                            value="{{call_support_number}}">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-form-label">WhatsApp Support Number</label>
                                        <input type="number" class="form-control" name="whatsapp_support_number"
                                            value="{{whatsapp_support_number}}">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group d-flex justify-content-center">
                                <button class="btn btn-lg btn-primary" type="submit">Submit</button>
                            </div>
                        </div>
                    </div>
            </div>
            </form>


            <div id="privacy-policy-three" class="privacy-policy">
                <form method="post" action="/admin/addsettings/{{id}}" enctype="multipart/form-data">

                </form>
            </div>

        </div>
    </div>
    </div>
    </div>
</section>
{{>footer}}
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
    integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
    crossorigin="anonymous"></script>
<script src="/admin/js/summernote-bs4.min.js"></script>
<script>
    $(function () {
        $('#summernote1').summernote()
        $('#summernote2').summernote()
        $('#summernote3').summernote()
        $('#summernote4').summernote()
        $('#summernote5').summernote()
        $('#summernote6').summernote()
        $('#summernote7').summernote()
    })
</script>
</body>

</html>