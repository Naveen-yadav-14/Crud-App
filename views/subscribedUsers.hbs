{{>header}}
<title>All Products</title>
<style>
    .picture-column {
        width: 120px;
        /* Set the width of the picture column */
    }

    .table-image {
        width: 100px;
        /* Set a max width for the images */
        height: auto;
        /* Maintain aspect ratio */
    }
</style>    
<div class="row p-2" style="margin: 0px !important;">
    <div class="col-md-12">
        <div class="card mt-2" style="border-left: 2px solid black;">
            <div class="alert-success">{{success}}</div>
            <div class="alert-danger">{{error}}</div>
            <div class="card-header" style="background-color: #03C4CB; color:white;">
                <h4><b>All Subscribers</b></h4>
            </div>
            <div class="card-body p-2">
                <div id="example1_wrapper">
                    <div class="row">
                        <div class="col-sm-12 table-responsive">
                            <table id="example2" aria-describedby="example1_info">
                                <thead>
                                    <tr>
                                        <th class="sorting" tabindex="0" aria-controls="example1">S.No</th>
                                        {{!-- <th class="sorting picture-column" tabindex="0" aria-controls="example1">Picture
                                        </th> --}}
                                        <th class="sorting" tabindex="0" aria-controls="example1">Name</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1">Email</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1">Phone</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1">Plan</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1">Price</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1">Duration</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1">Status</th>
                                    </tr>
                                </thead>
                               <tbody>
                        {{#each subscribedUsers}}
                        {{!-- {{log this}} --}}
                        <tr>
                            <td>{{inc @index}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.phoneNumber}}</td>
                            <td>{{this.subscription.plan.name}}</td>
                            <td>â‚¹{{this.subscription.plan.price}}</td>
                            <td>{{this.subscription.plan.duration}} Days</td>
                            <td>
                                {{#if (eq this.subscription.status "active")}}
                                    <span class="badge bg-success">Active</span>
                                {{else}}
                                    <span class="badge bg-danger">Expired</span>
                                {{/if}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{>footer}}
</body>
</html>